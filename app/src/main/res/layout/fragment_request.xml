<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrolling_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/background_part"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/active_request"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/quick_sand_bold"/>

                    <TextView
                        android:id="@+id/number_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/quick_sand_bold"
                        tools:ignore="HardcodedText"/>
                </LinearLayout>

                <Button
                    android:id="@+id/button_history"
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="2"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_tertiary"
                    android:foreground="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/icon_history"
                    android:text="@string/history"
                    android:textAllCaps="false"
                    android:textColor="@color/colorButton"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/quick_sand_bold"
                    tools:ignore="UnusedAttribute"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>